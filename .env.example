# Email Configuration (for password reset emails)
# Copy this file to .env and set your actual credentials
# =====================================================
# Volcanion Project Management - Environment Variables
# =====================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to source control!
# =====================================================

# Database Configuration
POSTGRES_DATABASE=volcanionpm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_ISSUER=VolcanionProjectManagement
JWT_AUDIENCE=VolcanionProjectManagement
JWT_EXPIRY_MINUTES=60
JWT_REFRESH_EXPIRY_DAYS=7

# Email Configuration
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM_NAME=Volcanion Project Management
EMAIL_FROM_ADDRESS=noreply@volcanion.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Application Settings
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_HTTP_PORTS=8080
ASPNETCORE_URLS=http://+:8080

# Logging Configuration
LOGGING_LOGLEVEL_DEFAULT=Information
LOGGING_LOGLEVEL_MICROSOFT=Warning
LOGGING_LOGLEVEL_MICROSOFT_HOSTING_LIFETIME=Information

# Security Settings
LOCKOUT_MAX_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
PASSWORD_RESET_TOKEN_EXPIRY_HOURS=1

# Cache Settings
CACHE_ABSOLUTE_EXPIRATION_MINUTES=60
CACHE_SLIDING_EXPIRATION_MINUTES=30

# File Upload Settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif

# Note: For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an "App Password" at https://myaccount.google.com/apppasswords
# 3. Use the App Password (not your regular Gmail password)

# Database Configuration (default values, can be overridden)
# POSTGRES_PASSWORD=postgres

# Redis Configuration (default values, can be overridden)
# REDIS_PASSWORD=

# JWT Secret (change in production!)
# JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
